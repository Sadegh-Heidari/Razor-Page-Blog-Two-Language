@page 
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model             Two.Pages.Edit.SabtNazarModel
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    if(culture.Contains("en"))
    {
        Layout = "Shared/Layouts/Ltr/Ltr_Layout";
    }
    else
    {
        Layout = "Shared/Layouts/Rtl/RTL_Layout";
    }
}


<div class="main-wrapper mt-150">
    <div class="white-bg">
        <div class="container">
            <form enctype="multipart/form-data" class="contact-form col-lg-8 mx-lg-auto"  method="post">
                <h3 class="text-center mb-3">@Resources.Insert.InsertBlog</h3>
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="@Model.NazarSanji">@Resources.Insert.Name</label>
                        <input asp-for="@Model.NazarSanji.title" type="text" class="form-control">
                        <span asp-validation-for="@Model.NazarSanji.title" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="@Model.NazarSanji.imagename" >@Resources.Insert.Picture</label>
                        <input asp-for="@Model.NazarSanji.imagename" type="file" class="form-control"accept="image/*">
                        <span asp-validation-for="@Model.NazarSanji.imagename" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="@Model.NazarSanji.Description" >@Resources.Insert.Description</label>
                        <textarea asp-for="@Model.NazarSanji.Description" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="@Model.NazarSanji.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-block btn-primary py-2">@Resources.Insert.Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>