@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model             Two.Pages.Edit.InsertCountryModel
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    if(culture.Contains("en"))
    {
        Layout = "Shared/Layouts/Ltr/LTR_Layout";
    }
    else
    {
        Layout = "Shared/Layouts/Rtl/RTL_Layout";
    }
}


    <div class="main-wrapper mt-150">
    <div class="white-bg">
        <div class="container">
            <form enctype="multipart/form-data" class="contact-form col-lg-8 mx-lg-auto"  method="post">
                <h3 class="text-center mb-3">@Resources.Insert.InsertCountry</h3>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Country.nameCountry" nameCountry>@Resources.Insert.Name</label>
                        <input asp-for="Country.nameCountry" type="text" class="form-control"  >
                        <span  asp-validation-for="Country.nameCountry" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Country.visit">@Resources.Insert.Visit</label>
                        <input asp-for="Country.visit" type="text" class="form-control" >
                        <span  asp-validation-for="Country.visit" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Country.imageCountry">@Resources.Insert.Picture</label>
                        <input asp-for="Country.imageCountry" type="file" class="form-control"accept="image/*">
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Country.AriaProgress">@Resources.Insert.Percent</label>
                        <input  asp-for="Country.AriaProgress"class="form-control" type="text" placeholder="10 , 20 , 30" >
                        <span  asp-validation-for="Country.AriaProgress"class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-block btn-primary py-2">@Resources.Insert.Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>